{
    "name": [
        "\\bmy name is ([A-Za-z\\s]+)",
        "\\bi am ([A-Za-z\\s]+)",
        "\\bi'm ([A-Za-z\\s]+)",
        "\\bcall me ([A-Za-z\\s]+)",
        "\\byou can call me ([A-Za-z\\s]+)"
    ],
    "phone": [
        "\\b(?:phone|mobile|contact) (?:number is|is|no\\.?) ([0-9\\-]+)",
        "\\bmy number is ([0-9\\-]+)"
    ],
    "email": [
        "\\b(?:email|mail) (?:is|address is|ID is) ([\\w\\.-]+@[\\w\\.-]+\\.\\w+)",
        "\\bmy email is ([\\w\\.-]+@[\\w\\.-]+\\.\\w+)"
    ],
    "salary": [
        "\\b(?:salary|income|pay) (?:is|amount is|is a) ([0-9\\,]+(?:\\.\\d{1,2})?)",
        "\\b(?:my salary|i earn) (?:is|is a) ([0-9\\,]+(?:\\.\\d{1,2})?)",
        "\\bi make ([0-9\\,]+(?:\\.\\d{1,2})?)",
        "\\bmy pay is ([0-9\\,]+(?:\\.\\d{1,2})?)"
    ]
}
